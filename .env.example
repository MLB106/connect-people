# === EXEMPLE DE CONFIGURATION ===
# Copiez ce fichier en .env et remplissez avec vos vraies valeurs

# === Serveur ===
PORT=4000
NODE_ENV=development
FRONT_URL=http://localhost:5173

# === MongoDB ===
DATABASE_URL=mongodb://localhost:27017/connect-people
DB_HOST=localhost
DB_PORT=27017
DB_NAME=connect-people
DB_USER=
DB_PASSWORD=

# === Redis ===
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === Sessions ===
# IMPORTANT : Générez un secret unique avec : openssl rand -base64 64
SESSION_SECRET=CHANGEZ_MOI_AVEC_SECRET_FORT_64_CARACTERES
SESSION_NAME=connect_people_sid

# === JWT - TOKENS ===
# IMPORTANT : Générez des secrets uniques pour CHAQUE token
JWT_SECRET=CHANGEZ_MOI_AVEC_SECRET_FORT_64_CARACTERES
JWT_EXPIRES_IN=7d
JWT_ADMIN_ACCESS_SECRET=CHANGEZ_MOI_AVEC_SECRET_FORT_64_CARACTERES
JWT_ADMIN_REFRESH_SECRET=CHANGEZ_MOI_AVEC_SECRET_FORT_64_CARACTERES
JWT_USER_ACCESS_SECRET=CHANGEZ_MOI_AVEC_SECRET_FORT_64_CARACTERES
JWT_USER_REFRESH_SECRET=CHANGEZ_MOI_AVEC_SECRET_FORT_64_CARACTERES

# === Mail (nodemailer) ===
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password

# === CORS ===
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# === Rate Limit ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# === CSRF ===
# IMPORTANT : Générez un secret unique
CSRF_SECRET=CHANGEZ_MOI_AVEC_SECRET_FORT_64_CARACTERES

# === IP Whitelist admin (CIDR) ===
ADMIN_IP_WHITELIST=127.0.0.1,10.8.0.0/24

# === SECURITÉ ===
# Ne JAMAIS commiter le fichier .env dans Git !
# Créez .env.production avec des secrets DIFFÉRENTS pour la production
