{
  "name": "connect-people",
  "version": "1.0.0",
  "description": "Backend moderne en ES2023 sans CommonJS",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --watch --import tsx/esm src/index.ts",
    "dev:api": "node --watch --loader tsx/esm src/index.ts",
    "dev:debug": "node --inspect --watch --loader tsx/esm src/index.ts",
    "dev:check": "node --check --loader tsx/esm src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "build:clean": "rimraf dist && npm run build",
    "build:check": "tsc -p tsconfig.build.json --noEmit",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "start:check": "node --check dist/index.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:strict": "tsc --noEmit --strict",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "lint:check": "eslint src --ext .ts,.js --max-warnings 0",
    "format": "prettier --write src/**/*.{ts,js,json,md}",
    "format:check": "prettier --check src/**/*.{ts,js,json,md}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "seed": "tsx scripts/seed.ts",
    "port:check": "node scripts/port-manager.js check",
    "port:free": "node scripts/port-manager.js free",
    "port:find": "node scripts/port-manager.js find",
    "clean": "rimraf dist logs/*.log",
    "clean:all": "rimraf dist logs/*.log node_modules/.cache",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:strict": "npm run type-check:strict && npm run lint:check && npm run test:ci",
    "check": "npm run type-check && npm run lint:check && npm run build:check",
    "precommit": "npm run check",
    "postinstall": "npm run type-check"
  },
  "keywords": [
    "nodejs",
    "es2023",
    "esm",
    "express",
    "typescript"
  ],
  "author": "MLB <connect_project_dz@yahoo.com>",
  "license": "MIT",
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "csurf": "^1.11.0",
    "dompurify": "^3.2.6",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "i18n": "^0.15.1",
    "ip-cidr": "^4.0.2",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.48",
    "mongoose": "^8.19.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "redis": "^4.7.1",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.23",
    "@types/express-handlebars": "^5.3.1",
    "@types/express-session": "^1.18.2",
    "@types/he": "^1.2.3",
    "@types/i18n": "^0.13.12",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.19",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cookie-parser": "^1.4.7",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jest-mock-extended": "^4.0.0",
    "memorystore": "^1.6.7",
    "msw": "^2.11.0",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.5.3"
  }
}
