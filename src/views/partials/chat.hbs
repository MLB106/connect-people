{{!-- src/views/partials/chat.hbs --}}
<div class="chat-widget">
    <div class="chat-header">
        <h3>Messages</h3>
        <span class="chat-status online">En ligne</span>
    </div>
    
    <div class="chat-messages" id="chat-messages">
        <div class="message received">
            <div class="message-avatar">
                <img src="https://via.placeholder.com/40" alt="Avatar">
            </div>
            <div class="message-content">
                <p>Bonjour ! Comment puis-je vous aider aujourd'hui ?</p>
                <span class="message-time">14:30</span>
            </div>
        </div>
        
        <div class="message sent">
            <div class="message-content">
                <p>Je cherche un expert en business plan</p>
                <span class="message-time">14:32</span>
            </div>
        </div>
        
        <div class="message received">
            <div class="message-avatar">
                <img src="https://via.placeholder.com/40" alt="Avatar">
            </div>
            <div class="message-content">
                <p>Parfait ! J'ai plusieurs experts qualifiés à vous proposer.</p>
                <span class="message-time">14:33</span>
            </div>
        </div>
    </div>
    
    <div class="chat-input">
        <input type="text" id="message-input" placeholder="Tapez votre message...">
        <button class="send-btn" data-action="send-message">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</div>






