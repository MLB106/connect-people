{{!-- src/views/pages/register.hbs --}}

{{#section 'head'}}
<meta name="page-type" content="register">
{{/section}}

<section class="error-page register-page">
    <div class="container">
        <div class="error-content register-content">
            <div class="error-icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <h1 class="error-title">Inscription</h1>
            <h2 class="error-subtitle">Crée ton compte Connect-People</h2>
            
            <form class="register-form" action="/auth/register" method="POST">
                <div class="form-group">
                    <label for="name" class="form-label">Nom complet</label>
                    <input type="text" id="name" name="name" class="form-input" required>
                </div>
                
                <div class="form-group">
                    <label for="email" class="form-label">Adresse e-mail</label>
                    <input type="email" id="email" name="email" class="form-input" required>
                </div>
                
                <div class="form-group">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" id="password" name="password" class="form-input" required>
                </div>
                
                <div class="form-group">
                    <label for="role" class="form-label">Type de compte</label>
                    <select id="role" name="role" class="form-input" required>
                        <option value="">Choisir un type</option>
                        <option value="helper">Helper (Proposer de l'aide)</option>
                        <option value="seeker">Seeker (Demander de l'aide)</option>
                    </select>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary register-btn">
                        <i class="fas fa-user-plus"></i>
                        S'inscrire
                    </button>
                </div>
            </form>
            
            <div class="register-footer">
                <p>Déjà un compte ? <a href="/auth/login" class="login-link">Se connecter</a></p>
            </div>
        </div>
    </div>
</section>

