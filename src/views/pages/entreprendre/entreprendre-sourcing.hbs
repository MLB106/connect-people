{{#section 'head'}}
<meta name="page-type" content="entreprendre-sourcing">
{{/section}}

<section class="hero">
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">
                <span class="gradient-text">Sourcing</span> pour votre entreprise
            </h1>
            <p class="hero-subtitle">
                Trouvez les meilleurs fournisseurs, produits et services pour développer votre entreprise.
                Nos experts vous accompagnent dans vos recherches.
            </p>
        </div>
    </div>
</section>

<section class="content-section">
    <div class="container">
        <div class="sourcing-categories">
            <h2>Nos services de sourcing</h2>
            <div class="categories-grid">
                <div class="category-card">
                    <h3>Produits</h3>
                    <p>Trouvez les meilleurs produits pour votre activité</p>
                    <a href="/entreprendre/sourcing/produits" class="btn btn-primary">Découvrir</a>
                </div>
                <div class="category-card">
                    <h3>Fournisseurs</h3>
                    <p>Identifiez des fournisseurs fiables et compétitifs</p>
                    <a href="/entreprendre/sourcing/fournisseurs" class="btn btn-primary">Découvrir</a>
                </div>
                <div class="category-card">
                    <h3>Matières premières</h3>
                    <p>Sourcez les matières premières de qualité</p>
                    <a href="/entreprendre/sourcing/matieres-premieres" class="btn btn-primary">Découvrir</a>
                </div>
                <div class="category-card">
                    <h3>Équipements</h3>
                    <p>Équipez votre entreprise avec le bon matériel</p>
                    <a href="/entreprendre/sourcing/equipements" class="btn btn-primary">Découvrir</a>
                </div>
                <div class="category-card">
                    <h3>Services</h3>
                    <p>Externalisez vos services avec des professionnels</p>
                    <a href="/entreprendre/sourcing/services" class="btn btn-primary">Découvrir</a>
                </div>
            </div>
        </div>
    </div>
</section>
